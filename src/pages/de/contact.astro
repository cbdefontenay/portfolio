---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

const email = "Konktatieren Sie mich per Email:";
const socialMedias = "Finden Sie mich auf Social Meidas:";
---

<Layout title="Kontakt">
  <div
    class="cursor-pointer grid grid-cols-1 md:grid-cols-2 mx-2 md:px-5 gap-4 mb-5 overflow-x-hidden py-7 font-gardamondMedium"
  >
    <div
      class="grid grid-row-1 md:grid-row-2 border dark:border-slate-50 border-slate-950 rounded-2xl p-6 bg-gradient-to-r dark:from-gradientfrom dark:to-gradientto from-gradientfromlight to-gradienttolight shadow-sm hover:shadow-slate-300 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 duration-300"
    >
      <Image src="/email.svg" width="50" height="50" alt="etwas" />
      <h1 class="font-bold font-gardamondBold text-xl text-[#12c0c9]"></h1>

      <p class="my-2">{email}</p>
    </div>
    <div
      class="grid grid-row-1 md:grid-row-2 border dark:border-slate-50 border-slate-950 rounded-2xl p-6 bg-gradient-to-r dark:from-gradientfrom dark:to-gradientto from-gradientfromlight to-gradienttolight shadow-sm hover:shadow-slate-300 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 duration-300"
    >
      <Image src="/social.svg" width="50" height="50" alt="etwas" />
      <h1 class="font-bold font-gardamondBold text-xl text-[#12c0c9]"></h1>

      <p class="my-2">{socialMedias}</p>
    </div>
  </div>
</Layout>
