---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="cursor-pointer grid grid-cols-1 md:grid-cols-3 mx-2 md:px-5 gap-4 mb-5 overflow-x-hidden py-7 font-gardamondMedium"
>
  <div
    class="grid grid-row-1 md:grid-row-2 border dark:border-slate-50 border-slate-950 rounded-2xl p-6 bg-gradient-to-r dark:from-gradientfrom dark:to-gradientto from-gradientfromlight to-gradienttolight shadow-sm hover:shadow-slate-300 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 duration-300"
  >
    <Image src="/code.svg" width="50" height="50" alt="etwas" />
    <h1 class="font-bold font-gardamondBold text-xl text-[#12c0c9]">
      {t("cards.firstHeader")}
    </h1>

    <p class="my-2">
      {t("cards.first")}
    </p>
  </div>

  <div
    class="grid grid-row-1 md:grid-row-2 border dark:border-slate-50 border-slate-950 rounded-2xl p-6 bg-gradient-to-r dark:from-gradientfrom dark:to-gradientto from-gradienttolight to-gradientfromlight shadow-sm hover:shadow-slate-300 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 duration-300"
  >
    <Image src="/dotnet.svg" width="80" height="80" alt="etwas" />
    <h1
      class="font-bold font-gardamondBold text-xl text-violet-700 dark:text-violet-500"
    >
      {t("cards.secondHeader")}
    </h1>

    <p class="my-2">
      {t("cards.second")}
    </p>
  </div>

  <div
    class="grid grid-row-1 md:grid-row-2 border dark:border-slate-50 border-slate-950 rounded-2xl p-6 bg-gradient-to-r dark:from-gradientfrom dark:to-gradientto from-gradientfromlight to-gradienttolight shadow-sm hover:shadow-slate-300 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-105 duration-300"
  >
    <Image src="/projects.svg" width="80" height="80" alt="etwas" />
    <h1 class="font-bold font-gardamondBold text-xl text-[#ddc108] mt-3">
      {t("cards.thirdHeader")}
    </h1>

    <p class="my-2 hover:underline hover:text-primary">
      <a href=`/${lang}/projekte`>{t("cards.third")}</a>
    </p>
  </div>
</div>
